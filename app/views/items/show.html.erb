<% content_for :head do %> 
  <meta name="description" content="<%= @item.title %>に関する情報です。この商品を欲しい人、持ってる人を表示しています。">
  <title><%= @item.title %> - monolist %></title>
<% end %>

<div class="container">
  <div class="container-inner inner-sm clearfix">
    <div class="item-single-main">
      <div class="image">
        <div class="img-wrap">
          <% if @item.large_image.present? %>
            <%= image_tag(@item.large_image, alt: @item.title) %>
          <% else %>
            <%= image_tag("no-image.png", alt: @item.title) %>
          <% end %>  
        </div>
      </div>
      <div class="detail">
        <p class="title">          
          <%= @item.title %>
        </p>
      </div>
      <%= render 'action' , item: @item %>
    </div>
    <div class="item-single-side">
      <div class="side-box">
        <h4 class="side-box-title">Haveしたユーザー</h4>
        <div class="side-box-body">
          <% # TODO Haveしたユーザー一覧 %>
          <div class="icon">
            <% @have_users.each do |have_user| %>
              <%= link_to gravatar_for(have_user, size: 30), have_user %>
            <% end %>
          </div>
        </div>
      </div>
      <div class="side-box">
        <h4 class="side-box-title">Wantしたユーザー</h4>
        <div class="side-box-body">
          <% # TODO Wantしたユーザー一覧 %>
          <div class="icon">
            <% @want_users.each do |want_user| %>
              <%= link_to gravatar_for(want_user, size: 30), want_user %>
            <% end %>  
          </div>
        </div>
      </div>
      <div class="text-center">
        <% #TODO 正しいリンク先に %>
          <% itemUrl = RakutenWebService::Ichiba::Item.search(itemCode: @item.item_code).first['itemUrl'] %>
          <%= link_to('楽天詳細ページへ', @item.detail_page_url) %>
      </div>
    </div>
  </div>
</div>

